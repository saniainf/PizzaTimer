                <Button Background="Blue"/>
                <Button Background="Red"/>
                <Button Background="Orange"/>
                <Button Background="Yellow"/>
                <Button Background="Green"/>
                <Button Background="Blue"/>
                <Button Background="Red"/>
                <Button Background="Orange"/>
                <Button Background="Yellow"/>
                <Button Background="Green"/>
                <Button Background="Blue"/>
            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
